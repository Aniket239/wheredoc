<style>
    /* Base styles for the body and login container */
    body {
        background-color: #000;
        /* Dark background for AMOLED */
        color: #fff;
        /* White text color */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
    }

    .login_container {
        background-color: #121212;
        /* Slightly lighter dark shade for contrast */
        padding: 20px;
        margin: 25% 0 10% 0;
        border-radius: 8px;
        width: 30%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    /* Style adjustments for form elements */
    .login_container h2 {
        text-align: center;
        color: #76ff03;
        margin: 2% 0 5% 0;
    }

    .login_container div {
        margin-bottom: 15px;
    }

    .login_container label {
        display: block;
        margin: 0 5% 1% 2.5%;
    }

    .login_container input[type="text"],
    input[type="password"] {
        width: 90%;
        margin: 0 5% 0 2.5%;
        padding: 10px;
        border: 1px solid #fff;
        /* White border for inputs */
        background-color: #333;
        color: #fff;
        border-radius: 4px;
    }

    .login_container .buttons{
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content:center;
        align-items: center;
    }
    .login_container  a{
        text-decoration: none;
        color: #0095ff; /* White text */
        width: 30%;
        text-align: center;
        transition: all 0.3s ease-in-out;
    }
    .login_container a:hover{
        color: aqua;
    }
    .login_container input[type="submit"] {
        width: 30%;
        height: 40px;
        margin: 20px 5px 10px 0;
        border: none;
        border-radius: 5px;
        background-color: #1E90FF; /* Stylish blue */
        color: #fff; /* White text */
        cursor: pointer;
        border: 2px solid #fff; /* White border */
        transition: background-color 0.3s ease;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    
    .login_container input[type="submit"]:hover {
        background-color: #4169E1; /* Darker blue on hover */
    }
</style>

<div class="login_container">
    <h2>Login</h2>
    <%= form_tag('/setup/login', method: "post" ) do %>
        <div>
            <%= label_tag(:email, "Email:" ) %>
                <%= text_field_tag :email,"",:required=>true %>
        </div>
        <div>
            <%= label_tag(:password, "Password:" ) %>
                <%= password_field_tag :password,"", :required=>true %>
        </div>
        <div class="buttons">
            <%= submit_tag("Login") %>
            <p>Already an user? <%= link_to "Signup" , setup_signup_url, class:"signup_button" %></p>
        </div>
        <% end %>
</div>