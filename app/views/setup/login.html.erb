<style>
/* Base styles for the body and login container */
body {
    background-color: #f4f4f4; /* Light grey background */
    color: #333; /* Dark grey text */
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    height: 100vh;
    margin: 0;
}

.login_container {
    background-color: #fff; /* White background */
    padding: 20px;
    border-radius: 8px;
    width: 30%;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Softer shadow */
    margin: auto; /* Center the container on the page */
}

/* Style adjustments for form elements */
.login_container h2 {
    text-align: center;
    color: #0a0a0a; /* Darker text color for title */
    margin: 2% 0 5% 0;
}

.login_container div {
    margin-bottom: 15px;
}

.login_container label {
    display: block;
    margin: 0 0 1% 0;
    color: #333; /* Dark grey text for labels */
}

.login_container input[type="text"],
.login_container input[type="password"] {
    width: 95%;
    padding: 10px;
    border: 1px solid #ccc; /* Light grey border */
    background-color: #e9e9e9; /* Lighter background for inputs */
    color: #333; /* Dark grey text for inputs */
    border-radius: 4px;
    display: block; /* Full-width inputs */
    margin: auto; /* Center align the inputs */
}

.login_container .buttons {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.login_container a {
    text-decoration: none;
    color: #007bff; /* Bootstrap blue for links */
    width: auto; /* Natural width based on content */
    transition: all 0.3s ease-in-out;
    margin: 5px 0; /* Spacing around links */
}

.login_container a:hover {
    color: #0056b3; /* Darker blue on hover */
}

.login_container input[type="submit"] {
    width: 30%;
    padding: 10px;
    margin: 20px 0;
    border: 1px solid #007bff; /* Border color same as link */
    border-radius: 5px;
    background-color: #007bff; /* Bootstrap primary blue for buttons */
    color: #fff; /* White text for buttons */
    cursor: pointer;
    transition: background-color 0.3s ease;
}

.login_container input[type="submit"]:hover {
    background-color: #0056b3; /* Darker blue on hover */
}

</style>

<div class="login_container">
    <h2>Login</h2>
    <%= form_tag('/setup/login', method: "post" ) do %>
        <div>
            <%= label_tag(:email, "Email:" ) %>
                <%= text_field_tag :email,"",:required=>true %>
        </div>
        <div>
            <%= label_tag(:password, "Password:" ) %>
                <%= password_field_tag :password,"", :required=>true %>
        </div>
        <div class="buttons">
            <%= submit_tag("Login") %>
            <p>Don't have an account? <%= link_to "Signup" , setup_signup_url, class:"signup_button" %></p>
        </div>
        <% end %>
</div>